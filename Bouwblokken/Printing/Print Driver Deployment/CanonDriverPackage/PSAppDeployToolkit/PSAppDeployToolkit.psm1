                        break
                    }
                    default
                    {
                        & $Script:CommandTable.'Show-ADTBalloonTip' -BalloonTipIcon Info -BalloonTipText (& $Script:CommandTable.'Get-ADTStringTable').BalloonTip.($_.ToString()).($adtSession.DeploymentType.ToString()) -NoWait
                        break
                    }
                }
            }
